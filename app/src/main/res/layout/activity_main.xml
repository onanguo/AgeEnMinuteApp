<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgmain"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculer Votre"
        android:textColor="@color/textblue"
        android:textSize="34sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="AGE"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/textblue"
        android:textSize="34sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="En Minutes"
        android:textColor="@color/textblue"
        android:textSize="34sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnDatapicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selectionner votre date"
        android:textColor="@color/lightgray"
        android:textSize="18dp"
        android:backgroundTint="@color/btnbg"
        />

    <TextView
        android:id="@+id/tvDateSelectionner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="29.12.1999"
        android:textColor="@color/textblue"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Date Selectionner"
        android:textColor="@color/lightgray"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvDateEnMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="1500000"
        android:textColor="@color/textblue"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Votre age en minute"
        android:textColor="@color/lightgray"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</LinearLayout>